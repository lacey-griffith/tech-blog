<ul class="post-list">
    {{#each posts as |post|}}
    <li>
        <article class="post">
            <div class="title">
                {{post.title}}
            </div>
            <div class="meta">
                posted by {{post.user.username}} on {{post.created_at}} | {{post.comments.length}} comment(s)
            </div>
        </article>
    </li>
    {{/each}}
</ul>